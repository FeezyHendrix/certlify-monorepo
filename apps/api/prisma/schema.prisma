generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DB_URL")
}

model User {
    id            String          @id @default(uuid())
    email         String          @unique
    password      String
    first_name    String?
    last_name     String?
    industry      Json? // Optional JSON to store the array
    occupation    Json? // Optional JSON to store the array
    createdAt     DateTime        @default(now())
    updatedAt     DateTime        @updatedAt
    ApiCredential ApiCredential[]

    @@map("users")
}

model ApiCredential {
    id      String @id @default(uuid())
    user    User   @relation(fields: [user_id], references: [id])
    user_id String
    secret  String

    @@map("api_credentials")
}
